  "golden_rules": [
    {
      "rule": "KISS (Keep It Simple, Stupid)",
      "rationale": "Mantieni le cose semplici finch√© non serve complessit√† reale",
      "priority": "must",
      "example": "Preferisci un if/else a un pattern complesso se serve solo 2 casi"
    },
    {
      "rule": "YAGNI (You Aren't Gonna Need It)",
      "rationale": "Non implementare funzionalit√† non richieste o speculative",
      "priority": "must",
      "example": "Non creare abstraction layers 'per il futuro' senza use case concreto"
    },
    {
      "rule": "Measure Before Optimize",
      "rationale": "Profila prima di ottimizzare, evita premature optimization",
      "priority": "must",
      "example": "Usa profiler (py-spy, Chrome DevTools) per identificare bottleneck reali"
    },
    {
      "rule": "Fail Fast, Recover Gracefully",
      "rationale": "Fallimenti evidenti in dev, retry limitati e rollback in prod",
      "priority": "must",
      "example": "Valida input subito, lancia eccezioni chiare, implementa circuit breaker"
    },
    {
      "rule": "Single Source of Truth",
      "rationale": "Config centralizzata, feature flags, un posto per env vars e tokens",
      "priority": "must",
      "example": "base-config.json √® l'unica fonte, tutto il resto √® auto-generato"
    },
    {
      "rule": "API First + Contract Testing",
      "rationale": "Definisci contratti (OpenAPI/GraphQL schema) prima di implementare",
      "priority": "prefer",
      "example": "Scrivi OpenAPI spec, genera types, testa con Pact o Dredd"
    },
    {
      "rule": "Automate Quality Gates",
      "rationale": "Lint/test/build devono bloccare merge su failures",
      "priority": "must",
      "example": "GitHub Actions con required checks, fail on eslint errors"
    },
    {
      "rule": "Small PRs / Atomic Commits",
      "rationale": "Rendi le code review rapide, mirate e facili da rollback",
      "priority": "prefer",
      "example": "1 PR = 1 feature/fix, max 400 righe, commit atomici con conventional commits"
    },
    {
      "rule": "Docs as Code",
      "rationale": "ADRs per decisioni architetturali, README per setup dev",
      "priority": "prefer",
      "example": "docs/adr/001-use-fastapi.md spiega perch√© FastAPI invece di Flask"
    },
    {
      "rule": "Security by Design",
      "rationale": "Threat modeling per feature critiche, mitigations documentate",
      "priority": "must",
      "example": "Input validation, RLS su DB, rate limiting, no secrets in code"
    },
    {
      "rule": "Observability by Default",
      "rationale": "Metrics, traces, logs, runbooks per incidenti",
      "priority": "must",
      "example": "Structured logging (structlog), OpenTelemetry, dashboard Grafana"
    }
